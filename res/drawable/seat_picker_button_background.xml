<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding android:left="0.0px" android:top="0.0px" android:right="0.0px" android:bottom="4.0px" />
            <solid android:color="#14000000" />
            <corners android:radius="12.0px" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <gradient android:startColor="@color/color_seat_button_background_checked_start_color" android:endColor="@color/color_seat_button_background_checked_end_color" android:angle="270.0" />
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <gradient android:startColor="@color/color_seat_button_background_uncheck_start_color" android:endColor="@color/color_seat_button_background_uncheck_end_color" android:angle="270.0" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <gradient android:startColor="@color/color_seat_button_background_checked_start_color" android:endColor="@color/color_seat_button_background_checked_end_color" android:angle="270.0" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
