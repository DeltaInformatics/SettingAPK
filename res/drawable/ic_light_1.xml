<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape>
                    <size android:height="80.0px" android:width="167.0px" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_screen_day_picked_1" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="center">
                <shape>
                    <size android:height="80.0px" android:width="167.0px" />
                </shape>
            </item>
            <item android:gravity="center" android:drawable="@drawable/ic_screen_day_1" />
        </layer-list>
    </item>
</selector>
